<script>
  document.addEventListener("fg-gifts:updated", async () => {
    let sca_cart = await fetch('/cart.js').then(async(scaCart) => {
      return await scaCart.json();
    });
  
    await fetch("/?sections=sections--23794570494263__cart-drawer").then(async(scaSection) => {
      sca_cart["sections"] = await scaSection.json();
    });

    theme.pubsub.publish(theme.pubsub.PUB_SUB_EVENTS.cartUpdate, { source: 'cart-items', cart: sca_cart });
  });

  document.addEventListener("fg-gifts:show-slider", async (e) => {
    const el = document.querySelector('.bogos-slider-offer .bogos-badge-title');
    el.textContent = el.textContent.replace('gift product(s)', '');
  })
</script>

<style>
  .bogos-slider-offer .bogos-gift-item-compare-price {
    display: none;
  }
</style>